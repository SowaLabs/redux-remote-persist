{
  "name": "redux-remote-persist",
  "version": "1.0.0",
  "description": "remote persist (and rehydrate) redux stores",
  "author": "Andrej ÄŒesen <andrej.cesen@sowalabs.com>",
  "bugs": {
    "url": "https://github.com/SowaLabs/redux-remote-persist/issues"
  },
  "homepage": "https://github.com/SowaLabs/redux-remote-persist#readme",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SowaLabs/redux-remote-persist.git"
  },
  "files": [
    "es",
    "src",
    "lib",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run flow-copy && npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/index.js -o dist/redux-persist.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/index.js -o dist/redux-persist.min.js",
    "clean": "rimraf es && rimraf lib",
    "flow-copy": "flow-copy-source src es && flow-copy-source src lib",
    "prepare": "npm run build",
    "stats:size": "node ./scripts/size-estimator.js",
    "test": "flow && jest",
    "version": "npm run clean && npm run build && npm run stats:size | tail -1 >> LIBSIZE.md && git add LIBSIZE.md"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@types/react": "^16.4.18",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.6.0",
    "cross-env": "^5.0.1",
    "dtslint": "^0.3.0",
    "eslint": "^4.16.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.98.1",
    "flow-copy-source": "^1.2.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "redux": "^4.0.1",
    "redux-observable": "^1.2.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rxjs": "^6.5.3"
  },
  "peerDependencies": {
    "redux": ">=4.0.0",
    "redux-observable": ">=1.0.0",
    "rxjs": ">=6.0.0-beta.0"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  }
}
